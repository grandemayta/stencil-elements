{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-standard"
  ],
  "rules": {
    "declaration-block-semicolon-newline-after": "always-multi-line",
    "declaration-colon-space-after": "always",
    "no-descending-specificity": [
      true,
      {
        "ignore": [
          "selectors-within-list"
        ]
      }
    ],
    "property-case": "lower",
    "unit-case": "lower"
  }
}
